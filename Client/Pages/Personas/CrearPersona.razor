@page "/crear-persona"
@inject HttpClient Http 
@inject NavigationManager UriHelper

<h3>Nueva Persona</h3>

<EditForm Model="@persona" OnValidSubmit="@CrearNuevaPersona">
    <div class="form-text">
        <label>Nombre:</label>
        <div>
            <InputText @bind-Value="@persona.Nombre"/>
            <ValidationMessage For="@(() => persona.Nombre)" />
        </div>
    </div>

    <button type="submit" class="btn btn-success">Crear Persona</button>
    <DataAnnotationsValidator/>
</EditForm>

@code {
    Persona persona = new Persona();

    async Task CrearNuevaPersona() {

        await Http.PostJsonAsync("personas" , persona);
        UriHelper.NavigateTo("indice-personas");
    }
}
